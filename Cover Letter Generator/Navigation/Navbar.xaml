<Page xmlns:Navigation="clr-namespace:Cover_Letter_Generator.Navigation"  x:Class="Cover_Letter_Generator.Navbar"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Cover_Letter_Generator"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NavBar">
    <Border BorderThickness="0,0,1,0" BorderBrush="LightGray">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Vertical">
                <Button Background="#00FFFFFF" HorizontalAlignment="Left">
                    <Image Source="/Navigation/navbarButton.png" Stretch="Uniform"  Height="20" Width="20"/>
                </Button>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <Navigation:NavigationButtonUC />
                </Grid>
            </StackPanel>
        </Grid>
    </Border>
</Page>
