<Page x:Class="Cover_Letter_Generator.TemplateSelectionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Cover_Letter_Generator"
      mc:Ignorable="d"  ShowsNavigationUI="False"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TemplateSelectionPage" Loaded="Page_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>
        <Frame x:Name="TemplateSelectorFrame" Margin="10,0,0,0"/>
        <Grid Grid.Column="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="200"/>
                <RowDefinition/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Border BorderBrush="LightGray" BorderThickness="1" MaxWidth="220">
                <Image/>
            </Border>
            <TextBlock x:Name="TemplateNameBlock" Grid.Row="2" Text="None" FontSize="20" Margin="5" TextAlignment="Center" TextWrapping="Wrap"/>
            <Button Grid.Row="3" Content="Select" FontSize="17"/>
        </Grid>
    </Grid>
</Page>
