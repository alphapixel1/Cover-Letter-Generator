<UserControl x:Class="Cover_Letter_Generator.Template.Template_User_Controls.LargeTemplateControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Cover_Letter_Generator.Template.Template_User_Controls"
             mc:Ignorable="d" Loaded="UserControl_Loaded"
             Height="35" Width="120" Margin="10,5" Background="White">
    <Border BorderBrush="LightGray" BorderThickness="1" MouseEnter="Border_MouseEnter" MouseLeave="Border_MouseLeave" IsHitTestVisible="True" Cursor="Hand" MouseDown="Border_MouseDown">
        <Grid>
            <TextBlock x:Name="TitleBlock" Text="Social media marketing Template" TextWrapping="Wrap" TextAlignment="Center" VerticalAlignment="Center"/>
        </Grid>
    </Border>
</UserControl>
