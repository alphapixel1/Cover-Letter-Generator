<UserControl x:Class="Cover_Letter_Generator.CoverLetterGenPage.ChatGPTMessageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Cover_Letter_Generator.CoverLetterGenPage"
             mc:Ignorable="d"
             Loaded="UserControl_Loaded">
    <Border CornerRadius="20" BorderThickness="2" BorderBrush="LightGray" Margin="5" x:Name="MainBorder">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Border BorderThickness="0,0,0,0" BorderBrush="LightGray" CornerRadius="16,16,0,0" Background="LightGray" x:Name="TopBorder">
                <TextBlock Text="test" Padding="20,2" FontSize="15" x:Name="RoleBlock" />
            </Border>
            <TextBlock Grid.Row="1" FontSize="10" Text="Content" HorizontalAlignment="Stretch" x:Name="ContentBlock" VerticalAlignment="Stretch" Margin="10,10,10,10" TextWrapping="Wrap"/>
        </Grid>
    </Border>
</UserControl>
