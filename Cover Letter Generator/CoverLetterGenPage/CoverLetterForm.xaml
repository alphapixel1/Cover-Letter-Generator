<Page x:Class="Cover_Letter_Generator.CoverLetterForm"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Cover_Letter_Generator" xmlns:form="clr-namespace:Cover_Letter_Generator.Form"
      mc:Ignorable="d"  ShowsNavigationUI="False"
      d:DesignHeight="450" d:DesignWidth="800"
      Loaded="Page_Loaded"
      Title="CoverLetterForm">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <ScrollViewer>
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition MaxHeight="80"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto" MaxHeight="200"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Job Description" FontSize="20" Margin="5,0"/>
                    <TextBox AcceptsReturn="True" Grid.Row="1" Grid.ColumnSpan="3" VerticalScrollBarVisibility="Visible" Margin="5,0,5,10"/>

                    <form:CustomTextControl Grid.Row="2" Label="Company" Icon="/CoverLetterGenPage/office.png" LabelWidth="64"/>
                    <form:CustomTextControl Grid.Row="2" Grid.Column="2" Label="Recipient" Icon="/CoverLetterGenPage/user(2).png" LabelWidth="64"/>

                    <Grid Grid.Row="3" Grid.Column="4" Margin="10,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="68"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Template" FontSize="15" Grid.Row="4"/>
                        <Button Content="test" Grid.Column="1" Height="22" BorderBrush="#ABADB3" Background="White" Click="TemplateChange_Click"/>
                    </Grid>

                    <TextBlock Text="GPT Prompt" Grid.Row="3" FontSize="20" Margin="5,0"/>
                    <TextBox x:Name="GptPromptBox" Height="100" AcceptsReturn="True" Grid.Row="4" Grid.ColumnSpan="3" VerticalScrollBarVisibility="Visible" Margin="0,0,5,5"/>
                </Grid>
            </ScrollViewer>
            <Grid Background="#EDEDED" Grid.Row="1">
                <Button HorizontalAlignment="Right" Content="Generate Cover" BorderThickness="0" FontSize="15" Background="#EDEDED" Padding="5,0" Click="GenerateCover_Click"/>
            </Grid>
        </Grid>
        <TextBlock Grid.Column="1" Text="HERE IS WHERE TEMPLATE SELECTION COULD GO"/>
    </Grid>
</Page>
